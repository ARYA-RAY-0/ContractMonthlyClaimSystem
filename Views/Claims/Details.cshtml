@model ContractMonthlyClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Claim Details</h1>
    <span class="badge @((Model.Status == ClaimStatus.Submitted) ? "bg-info" :
                      (Model.Status == ClaimStatus.ApprovedByCoordinator) ? "bg-warning" :
                      (Model.Status == ClaimStatus.ApprovedByManager) ? "bg-success" :
                      "bg-danger") fs-6">
        @Html.DisplayFor(model => model.Status)
    </span>
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">Claim Summary</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Claim Month</dt>
                    <dd class="col-sm-8">@Model.ClaimMonth.ToString("MMMM yyyy")</dd>

                    <dt class="col-sm-4">Total Hours</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalHours)</dd>

                    <dt class="col-sm-4">Submitted By</dt>
                    <dd class="col-sm-8">@Model.User.Email</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Total Amount</dt>
                    <dd class="col-sm-8">R @Html.DisplayFor(model => model.TotalAmount)</dd>

                    <dt class="col-sm-4">Claim ID</dt>
                    <dd class="col-sm-8">@Model.ClaimId</dd>

                    <dt class="col-sm-4">Submission Date</dt>
                    <dd class="col-sm-8">@DateTime.Now.ToString("dd MMMM yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Claim Items Section -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">Work Items</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Placeholder data for UI prototype -->
                    <tr>
                        <td>15 Sep 2025</td>
                        <td>Lecture on ASP.NET MVC</td>
                        <td>3.0</td>
                        <td>R 500.00</td>
                        <td>R 1,500.00</td>
                    </tr>
                    <tr>
                        <td>20 Sep 2025</td>
                        <td>Student Consultations</td>
                        <td>2.5</td>
                        <td>R 500.00</td>
                        <td>R 1,250.00</td>
                    </tr>
                </tbody>
                <tfoot class="table-group-divider">
                    <tr class="fw-bold">
                        <td colspan="4" class="text-end">Total:</td>
                        <td>R 2,750.00</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Supporting Documents Section -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">Supporting Documents</h5>
    </div>
    <div class="card-body">
        <div class="list-group">
            <!-- Placeholder document list -->
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">timesheet_september.pdf</h6>
                    <small>2.4 MB</small>
                </div>
                <small class="text-muted">Uploaded: 25 Sep 2025</small>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">preparation_notes.docx</h6>
                    <small>1.1 MB</small>
                </div>
                <small class="text-muted">Uploaded: 25 Sep 2025</small>
            </a>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.ClaimId" class="btn btn-outline-primary">Edit</a>
    <button type="button" class="btn btn-outline-secondary">Download PDF Report</button>
    <button type="button" class="btn btn-outline-success">Approve Claim</button>
    <button type="button" class="btn btn-outline-danger">Request Changes</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-auto">Back to Dashboard</a>
</div>